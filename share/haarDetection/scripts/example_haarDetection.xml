<application>
<name>example haarDetection App</name>
    <module>
        <name>yarpdev</name>
        <parameters>--device OpenNI2DeviceServer --noMirror --depthVideoMode 4 --colorVideoMode 9</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>haarDetection</name>
        <parameters>--kinectDevice OpenNI2DeviceClient --kinectLocal /haarDetection</parameters>
        <node>localhost</node>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /faces/yarpview/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/haarDetection/img:o</from>
        <to>/faces/yarpview/img:i</to>
    </connection>


</application>

